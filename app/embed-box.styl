@import "./styl/media-query-variables"

.embed-box
  transform translate3d(0, 0, 0)

.embed-box[data-mode="inline"]
  display inline-block
  height 100vh
  max-height 100vh
  min-height 15em
  width 100%

.embed-box[data-mode="modal"]
  bottom 0 !important
  display block
  height 100% !important
  left 0 !important
  max-height 100vh !important
  max-width 100vw !important
  opacity 0
  position fixed !important
  right 0 !important
  top 0 !important
  transition opacity .1s linear !important
  width 100% !important
  z-index 100000 !important

.embed-box-download-iframe
  position fixed
  visibility hidden
  width 1px
  height 1px
  z-index -99999

[data-embed-box-scroll-state]
  height 100%

body[data-embed-box-scroll-state="locked"]
  overflow hidden !important

@media mobileMaxWidthQuery
  .embed-box[data-mode="modal"]
    position absolute !important

  body, html
    &[data-embed-box-scroll-state="locked"]
      bottom 0 !important
      left 0 !important
      overflow hidden !important
      position fixed !important
      right 0 !important
      top 0 !important
