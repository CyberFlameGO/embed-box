.embed-box[data-mode="inline"]
  display block !important
  height 100%
  width 100%

.embed-box[data-mode="modal"]
  bottom 0 !important
  height 100vh !important
  left 0 !important
  opacity 0 !important
  position fixed !important
  right 0 !important
  top 0 !important
  // Use linear timing to maintain smooth transition across visibility states.
  transition opacity .1s linear !important
  width 100vw !important
  z-index 10000 !important

  &[data-visibility="hiding"]
    opacity 0 !important

  &[data-visibility="hidden"]
    opacity 0 !important

  &[data-visibility="showing"]
    opacity .5 !important

  &[data-visibility="shown"]
    opacity 1 !important

.embed-box-download-iframe
  position fixed
  visibility hidden
  width 1px
  height 1px
  z-index -99999
