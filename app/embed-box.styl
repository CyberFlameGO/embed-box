.embed-box[data-mode="inline"]
  display inline-block
  height 100%
  width 100%

.embed-box[data-mode="modal"]
  bottom 0 !important
  display block
  height 100vh !important
  left 0 !important
  opacity 0
  position fixed !important
  right 0 !important
  top 0 !important
  // Use linear timing to maintain smooth transition across visibility states.
  transition opacity .1s linear !important
  width 100vw !important
  z-index 100000 !important

.embed-box-download-iframe
  position fixed
  visibility hidden
  width 1px
  height 1px
  z-index -99999

[data-embed-box-container]
  overflow hidden !important
