body
  width 660px
  height 110px

.menu
  align-items center
  flex-flow row wrap
  background #fff
  color #555

  &.sub
    background-color #666

  .item
    border-left 1px solid transparent
    line-height 1.5
    padding .3em .8em

    & + .item
      border-left-color #ccc

.content
  background-color #e0e0d8
  padding 0 1em
