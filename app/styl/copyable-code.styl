@import colors
@import fonts
@import media-query-variables

.copyable-code-wrapper
  display block
  position relative
  height 2.375em

  .copy-button.button.primary
    position relative
    height 100%
    vertical-align middle
    z-index 1
    font-weight normal
    padding-top .55em
    padding-bottom .6em
    padding-left 1.25em
    padding-right 1.25em
    border-top-right-radius 0
    border-bottom-right-radius 0
    width 5.4125rem

    @media mobileMaxWidthQuery
      display none

    &.zeroclipboard-is-hover
      box-shadow 0 .1875em .375em -.1875em rgba(#000, .325)

      &.zeroclipboard-is-active
        box-shadow inset 0 .125em .375em rgba(#000, .325)

    @media mobileMaxWidthQuery
      display none

    @media firefoxOnlyQuery
      top -.0625em

  .standard.code.embed-code
    height 100%
    margin-left -1px
    border-top-left-radius 0
    border-bottom-left-radius 0
    font-size .8em
    padding .75em .8em
    width calc(100% - 5.4125rem)

    @media mobileMaxWidthQuery
      width 100%
      overflow ellipsis
      margin-left 0
      border-radius .1875rem

  .copied-message
    position absolute
    top 100%
    left 0
    z-index 3
    background rgba(#000, .9)
    color #fff
    font-family sansSerifFonts
    border-radius .25em
    padding .5em 1em
    margin-top .6em

    &:before
      content ""
      position absolute
      overflow hidden
      bottom 100%
      left 1em
      border-left .5em solid transparent
      border-right .5em solid transparent
      border-bottom .5em solid rgba(#000, .9)
