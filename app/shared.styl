@import nib

@import "styl/reset"
@import "styl/box-sizing-border-box-all"
@import "styl/body-typography"
@import "styl/buttons"
@import "styl/more-links-and-buttons"
@import "styl/media-query-variables"
@import "styl/colors"

html, body
  width 100%
  height 100%

body
  cursor default
  margin 0
  user-select none

div, footer, header, main, section
  // TODO: IE9 polyfill with https://github.com/7rulnik/postcss-flexibility
  display flex

button.run
  background #e6db74
  color #171717
  font-weight 500
  margin 0
  padding .3em 1em
  position absolute
  left 1.5em
  top 1.5em

[data-column]
  flex-flow column nowrap

[data-action]
  cursor pointer

[data-visibility="hidden"]
  visibility hidden

[data-selectable], [contenteditable]
  cursor text
  user-select text
