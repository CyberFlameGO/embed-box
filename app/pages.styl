@import "~styl/colors"
@import "~styl/fonts"

[data-component$="-page"]
  flex 1 1 auto
  overflow auto

  .copy-container
    background lightGrayRGBA
    position relative

    > textarea
      background-color transparent
      border none
      display block
      font-family monospaceFonts
      margin 0
      padding 1.3em
      padding-top 4.3em
      resize none
      white-space pre-wrap
      width 100%
      word-wrap break-word

      &:focus
        outline none

.instructions.markdown
  cursor auto
  display block
  padding 3em 2em 3em 4em
  user-select text

  [data-content-slot]
    background lightGrayRGBA
    padding 1em
    border-radius 3px
    margin-left -2em

  div, footer, header, section
    display block

  figure > img
    max-width 100%

  h1
    font-size 1.25em
    font-weight 300
    margin-top 2em
    margin-bottom 2em
    text-align center
    padding-right 2em

  h2
    font-size 1em
    font-weight 500
    margin-top 3em

    .step-number
      display inline-block
      width 2em
      height 2em
      margin-right 1em
      margin-left -3em
      line-height 2em
      text-align center
      vertical-align baseline
      border-radius 999em

      &:not(.accent-background-color)
        background lightGrayRGBA

      &.accent-background-color
        color #fff

  p
    color subtleText

  > *:first-child
    margin-top 0

  > *:last-child
    margin-bottom 0
