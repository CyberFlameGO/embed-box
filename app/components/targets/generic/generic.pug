section
  h1 Installing #{config.name}

  != this.renderBeforeContent()

  ol.steps
    if this.downloadURL
      li
        h2
          a.more(target="_blank" href=this.downloadURL)= this.downloadLabel
          div= this.autoDownloadLabel

    li
      h2 Copy the code to your site's &lt;#{this.location}&gt; tag.

      .copy-container
        button.primary.run(data-ref="copyButtons[]") Copy
        div.copyable(contenteditable)= this.copyText

      figure
        img(src=require("./installing-eager.gif"))

    li
      h2 Visit your site

      p After saving the changes you made, visit your site in the browser.
      p Youâ€™re done!

  != this.renderAfterContent()
