@import "~styl/colors"

[data-component="site-type-search"]
  .header
    box-shadow 0 1px lightLineGrayRGBA
    flex 0 0 auto
    width 100%

    .search
      border none
      flex 1 0 auto
      padding 1.5em

      &:focus
        outline none

  .types
    overflow-y scroll

    .type
      align-items center
      flex 0 0 auto
      padding 1em

      .icon
        width 2em
        margin-right 1em

      & + .type
        box-shadow inset 0 1px lighterLineGray
