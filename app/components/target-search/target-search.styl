@import "~styl/colors"

[data-component="target-search"]
  .header
    align-items center
    background-color lightGrayRGBA
    box-shadow 0 1px lightLineGrayRGBA
    flex 0 0 auto
    padding 1em 0
    width 100%
    z-index 2 // Fix box-shadow translucent stacking artifacts

    label
      color darken(gray, 45%)
      margin-bottom .5em

    .input-wrapper
      align-items center
      background-color white
      border-radius 5em
      width calc(100% - 3em)

    .icon
      height 1em
      stroke subtleTextRGBA
      margin-left 1em
      width 1em

    .search
      background transparent
      border none
      flex 1 0 auto
      padding .5em

      &::placeholder
        color rgba(#000, .3)
        font-family inherit
        font-size 1em

      &:focus
        outline none

  .entries
    // Fixes Firefox scroll issues. flex-grow will consume the remaining space.
    height 0
    flex 1 1 auto
    overflow auto
    overflow-scrolling touch
    z-index 1 // Fixes box-shadow translucent stacking artifacts

    .entry
      position relative
      cursor pointer
      align-items center
      flex 0 0 auto
      padding 1em
      overflow ellipsis
      border 1px solid lightestLineGrayRGBA
      border-left 0
      border-right 0

      &[data-visible-order="-1"]
        display none

      &[data-visible-order="0"]
        border-top-color transparent

      &:last-child
        border-bottom-color transparent

      &:not(:last-child)
        margin-bottom -1px

      &:not([data-selected])
        z-index 1
        background transparent
        color inherit

        &:hover
          background lightGrayRGBA

      &:focus
        outline none
        background lightGrayRGBA

      &[data-selected]
        border-color transparent

        &, &:hover
          z-index 2
          color #fff
          box-shadow none !important

      .icon
        fill currentColor
        height 2em
        margin-right 1em
        width 2em
