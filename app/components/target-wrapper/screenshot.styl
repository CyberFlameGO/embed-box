@import "~styl/colors"

figure
  margin 2em 0
  position relative

  img, &[data-component="screenshot"]
    background #fff
    display block
    max-width 100%

  &[data-component="screenshot"]
    height 0
    overflow hidden
    // padding-bottom set by JS
    padding-left 0
    padding-right 0
    padding-top 0
    position relative
    width 100%

    iframe
      border 0
      left 0
      opacity 0
      position absolute
      top 0
      transform-origin 0 0

    &[data-render-state="scaled"] iframe
      opacity 1

  &::after
    content ""
    display block
    position absolute
    cursor default
    border 1px solid lightLineGrayRGBA
    z-index 1
    top 0
    right 0
    bottom 0
    left 0

    [data-component="application"][data-mode="modal"] &
      border-left 0
      border-right 0

    @media smallerThanTargetInstructionsMaxWidthQuery
      border-left 0
      border-right 0

  [annotation-arrow]
    position absolute

    > div
      position absolute
      top 0
      left 0
      height 0
      width 100%

    svg
      position absolute
      top 0
      left 0
      width 100%
      height 100%

    &[data-svg-view-box="0 0 83 114"] > div
      padding-bottom 137.35%

    &[data-svg-view-box="0 0 127 73"] > div
      padding-bottom 57.48%
