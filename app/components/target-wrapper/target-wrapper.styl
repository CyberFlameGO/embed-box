@import "~styl/colors"
@import "~styl/fonts"

@keyframes copied
  0%, 100%
    opacity 0

  50%
    opacity 1
    transform translate3d(0, -1.8em, 0)

  100%
    transform translate3d(0, -1.8em, 0)

[data-component="application"][data-mode="inline"] [data-component="target-wrapper"] .modal-footer
  display none

[data-component$="-target"]
  flex 1 1 auto
  overflow auto
  overflow-scrolling touch

  &:focus
    outline none

  .copy-container
    font-size .8em
    background lightGrayRGBA
    margin-bottom 1em
    position relative

    button.run
      margin 0
      padding .3em 1em
      position absolute
      left 1.5em
      top 1.5em

      &:after
        color black
        content "Copied"
        display inline-block
        left 100%
        margin-left 0.5em
        opacity 0
        position absolute

      &[data-status="copied"]:after
        animation copied 400ms linear
        animation-fill-mode forwards
        opacity 1

    > .copyable
      display block
      font-family monospaceFonts
      margin 0
      padding 1.3em
      padding-top 4.3em
      white-space pre-wrap
      width 100%
      word-wrap break-word

      &:focus
        outline none

.instructions.markdown
  cursor auto
  display block
  flex 1 1 auto
  // Fixes Firefox scroll issues. flex-grow will consume the remaining space.
  height 0
  padding 3em 2em 3em 4em
  user-select text

  [data-content-slot]
    background lightGrayRGBA
    padding 1em
    border-radius 3px
    margin-left -2em

  ol.steps
    counter-reset item 0
    list-style none
    margin 0
    padding 0

    li
      counter-increment item
      position relative

      &:before
        background lightGrayRGBA
        border-radius 50%
        color #fff
        content counter(item)
        display inline-block
        line-height 2em
        margin-right 1em
        position absolute
        right 100%
        text-align center
        top 0
        width 2em

  div, footer, header, section
    display block

  figure
    margin 2em -2em 0 -4em

    > img
      max-width 100%

  h1
    font-size 1.25em
    font-weight 300
    margin-top 2em
    margin-bottom 2em
    text-align center
    padding-right 2em

  h2
    font-size 1em
    font-weight 500
    margin-top 3em

  > *:first-child
    margin-top 0

  > *:last-child
    margin-bottom 0
