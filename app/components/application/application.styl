@import "~styl/colors"
@import "~styl/sizes"
@import "~styl/media-query-variables"

[data-component="application"]
  align-items center
  justify-content center
  max-height 100%
  min-height 100%

  @media (max-height 24em)
    justify-content flex-start

  &[data-route="home"], &[data-target-count="1"]

    .modal-header [data-action="previous"]
      opacity 0
      pointer-events none

  &[data-mode="inline"] .modal-header [data-action="close"]
    opacity 0
    pointer-events none

  .content
    transform translate3d(0, 0, 0)
    transition transform .2s ease

  &[data-route]:not([data-route="home"]) .content
    transform translate3d(-100%, 0, 0)

  &[data-transition-state="transitioned"] [inert] > *
    display none

  &[data-mode="modal"]
    background lightGrayRGBA

    @media desktopMinWidthQuery
      padding 1.5em 0

    .modal
      border-radius .3125em

      @media desktopMinWidthQuery
        box-shadow 0 2px 8px rgba(#000, .4)

      @media mobileMaxWidthQuery
        border-radius 0

  &[data-mode="inline"]
    background lightGray
    height 32em
    max-height 90vh
    min-height 20em

    .modal
      border 1px solid rgba(0, 0, 0, 0.3)

  &[data-branding="visible"][data-mode="modal"]
    padding-bottom 0

    @media desktopMinWidthQuery
      .branding
        display flex

  .branding
    display none
    font-size .8em
    justify-content flex-end
    line-height 3
    margin-bottom 1em

    a
      color #fff
      -webkit-font-smoothing antialiased
      text-decoration none
      text-shadow 0 1px 2px rgba(#000, .75)
      padding 0 .5em

      &:after
        font-size 1.4em

  .modal, .branding
    width targetInstructionsMaxWidth
    max-width 100vw

  .modal
    background #fff
    flex 1 1 auto
    max-height 38em
    max-width 100vw
    min-height 18em
    overflow hidden
    position relative
    z-index 1 // Fix border radius overflow issues.

    @media mobileMaxWidthQuery
      max-height 100vh
      max-width 100vw
      width 100%

    .content
      flex 1 1 auto // Fill center unused space.
      transform translate3d(0, 0, 0) // Force GPU render.

      > *
        margin 0
        flex 1 0 auto
        max-width 100vw
        width 100%

  .modal-header
    align-items center
    box-shadow 0 1px lightLineGrayRGBA
    flex 0 0 auto
    justify-content space-between
    width 100%
    max-width 100vw
    z-index 1

    > *
      display flex
      align-items center

    .title
      text-align center
      line-height 1.4
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      max-width 100%
      display inline-block

      @media (max-width 500px)
        &[data-title-char-length="long"]
          font-size .8em

        &[data-title-char-length="medium"]
          font-size .9em

      @media (max-width 400px)
        &[data-title-char-length="medium"]
          font-size .8em

        &[data-title-char-length="short"]
          font-size .9em

      @media (max-width 360px)
        &[data-title-char-length="short"]
          font-size .8em

        &[data-title-char-length="puny"]
          font-size .9em

      @media (max-width 340px)
        &[data-title-char-length="puny"]
          font-size .8em

    .button[data-action]
      appearance none
      background inherit
      border-radius 0
      color inherit
      flex 0 0 auto
      display flex
      height 4em
      justify-content center
      padding 0
      margin 0
      width 4em
      transition opacity .15s ease

      &:focus:before
        display none

      &:hover, &:focus
        background lightGrayRGBA
        box-shadow none

      > .icon
        flex 1 0 auto
        width 1em
        height 1em
        stroke currentColor

      &:not(:hover) .icon
        stroke-opacity .5
