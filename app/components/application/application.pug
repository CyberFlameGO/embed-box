main(data-column data-component="application")
  .modal(data-column)
    .modal-header(aria-role="menubar")
      button(aria-role="menuitem" data-action="previous" data-ref="previousPageButton")

      span.title Add #{store.appName} to your site

      button(aria-role="menuitem" data-action="close" data-ref="closeModalButton")

    .content(data-ref="content")

    .modal-footer
      button.primary.slim.more(data-action="next" data-ref="nextPageButton")
        | #{store.labels.next}

      button.primary.slim(data-action="close" data-ref="doneButton")
        | #{store.labels.done}
