@import nib

@import "styl/colors"

.plugin-choice-list
  box-shadow inset 0 1px lighterLineGray

  &, li
    display block
    margin 0
    padding 0
    list-style none

  li:not(:first-child) .plugin-choice
    margin-top -1px

  li:not(:last-child):not(:hover) .plugin-choice
    box-shadow inset 0 -1px lighterLineGray

    &.selected
      box-shadow none

  .plugin-choice
    position relative
    cursor pointer
    display block
    padding 1em
    overflow ellipsis

    &:not(.selected)
      background transparent
      color inherit

      &:hover
        z-index 1
        box-shadow none
        background lightGray
        box-shadow inset 0 -1px lighterLineGrayRGBA, inset 0 1px lighterLineGrayRGBA

    &.selected

      &, &:hover
        z-index 2
        color #fff
        box-shadow none

    > span, > .icon
      display inline-block
      vertical-align middle
      height 2em
      line-height 2em

    > span
      padding-left 1em
      padding-right 1em

    > .icon
      position relative
      width 2em

      > svg
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        margin auto
        fill currentColor
        display inline-block
        height 75%
        width 75%
